RewriteEngine On

# Explicitly rewrite root requests to public/index.php
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /public/index.php [L,QSA]

# Deny direct access to API PHP files

# Ensure PHP files are executed
AddHandler application/x-httpd-php .php

# Allow direct access to static files
RewriteCond %{REQUEST_URI} ^/(css|js|images)/(.*)$
RewriteCond %{DOCUMENT_ROOT}/public/%1/%2 -f
RewriteRule ^(css|js|images)/(.*)$ /public/$1/$2 [L]

# Forward all other requests to index.php for FastRoute routing
RewriteRule ^ /public/index.php [QSA,L]
