RewriteEngine On
DirectoryIndex index.php

AddHandler application/x-httpd-php .php

<Directory "/public/api">
    Require all granted
</Directory>

<FilesMatch "\.(php)$">
    Require all granted
</FilesMatch>

<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Ensure PHP session cookies work properly
php_flag session.auto_start on
php_value session.use_cookies 1
php_value session.use_only_cookies 1

# Prevent direct access to PHP files inside /api

# Allow direct access to static files (CSS, JS, images)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Friendly URL routing for /dashboard, /admin, /user
RewriteCond %{REQUEST_URI} ^/(dashboard|admin|user) [NC]
RewriteRule ^ /public/index.php [QSA,L]
