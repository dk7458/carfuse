RewriteEngine On

# Blokowanie dostępu do plików konfiguracyjnych i logów
<FilesMatch "(^\.|config\.php|database\.php|encryption\.php|logs|\.env)">
    Require all denied
</FilesMatch>

# Zezwolenie na bezpośredni dostęp do istniejących plików i katalogów
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Przekierowanie wszystkich innych zapytań do index.php
RewriteRule ^ index.php [QSA,L]
