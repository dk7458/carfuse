RewriteEngine On

# âœ… Rewrite `/` requests to load `views/home.php`
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ views/home.php [L,QSA]

# âœ… Allow direct access to API files while preventing directory browsing
RewriteCond %{REQUEST_URI} ^/api/.*\.php$
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# ðŸ”’ Protect sensitive backend files (Prevent direct access to config & helper files)
RewriteRule ^(App/|config/|helpers/|private/).* - [F,L]

# âœ… Allow direct access to static files (CSS, JS, images)
RewriteCond %{REQUEST_URI} ^/(css|js|images)/(.*)$
RewriteCond %{DOCUMENT_ROOT}/public/%1/%2 -f
RewriteRule ^(css|js|images)/(.*)$ /public/$1/$2 [L]

# ðŸš€ Forward all other requests to FastRoute in index.php
RewriteRule ^ index.php [QSA,L]
