RewriteEngine On

# âœ… Allow direct access to API files
RewriteCond %{REQUEST_URI} ^/api/.*\.php$
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# âœ… Allow direct access to static files
RewriteCond %{REQUEST_URI} ^/(css|js|images)/(.*)$
RewriteCond %{DOCUMENT_ROOT}/public/%1/%2 -f
RewriteRule ^(css|js|images)/(.*)$ /public/$1/$2 [L]

# ðŸš€ Redirect all other requests to index.php for FastRoute
RewriteRule ^ index.php [QSA,L]
